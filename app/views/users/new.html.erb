<h1>Add a new user</h1>

<%= form_for @user do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_area :name %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit %>

<% end %>